<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_tree_inherit_button" model="ir.ui.view">
        <field name="name">product.template.tree.inherit.button</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button string="Exporter vers prestashop"
                        type="object"
                        name="action_export_to_prestashop"
                        class="oe_highlight"/>
                <button string="Delete Full Product Pres-Odoo"
                        type="object"
                        name="action_delete_product_prestashop"
                        class="btn-danger"
                        confirm="Are you sure you want to delete this product from PrestaShop?"/>
            </header>
        </field>
    </record>
</odoo>
