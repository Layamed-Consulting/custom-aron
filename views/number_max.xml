<odoo>
    <!-- Tree View for Orders -->
    <record id="view_picking_maximum_tree" model="ir.ui.view">
        <field name="name">picking.maximum.tree</field>
        <field name="model">picking.maximum</field>
        <field name="arch" type="xml">
            <tree string="Maximum number">
                <field name="number_max"/>
            </tree>
        </field>
    </record>

    <record id="view_picking_maximum_tree_form" model="ir.ui.view">
    <field name="name">picking.maximum.tree.form</field>
    <field name="model">picking.maximum</field>
    <field name="arch" type="xml">
        <form string="Configuration">

            <sheet>
                <group>
                    <group>
                        <field name="number_max"/>
                    </group>
                </group>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
        </form>
    </field>
</record>
    <!-- Action and Menu -->
    <record id="action_picking_maximum" model="ir.actions.act_window">
        <field name="name">Parametrer le maximum </field>
        <field name="res_model">picking.maximum</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
    <menuitem id="menu_picking_maximum" name="Configuration (Max number)" parent="menu_stock_website_root" sequence="99" action="action_picking_maximum"/>
</odoo>